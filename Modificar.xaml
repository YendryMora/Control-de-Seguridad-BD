<Window x:Class="ControlSeguridadBD.Modificar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlSeguridadBD"
        mc:Ignorable="d"
        Title="Modificar" Height="196.109" Width="300">
    <Grid Margin="0,0,0,-1">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Modificar Usuario:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="25,50,0,0" TextWrapping="Wrap" Text="Nombre:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNom" HorizontalAlignment="Left" Height="23" Margin="25,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="178,50,0,0" TextWrapping="Wrap" Text="Nuevo Nombre:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNewNom" HorizontalAlignment="Left" Height="23" Margin="162,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="25,126,0,0" VerticalAlignment="Top" Width="75" Click="btnModificar_Click"/>

    </Grid>
</Window>
